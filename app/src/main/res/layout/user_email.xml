<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sixtus.com.homenavigation.UserEmail"
    android:orientation="vertical"
    android:background="@drawable/back_cover2"
    android:weightSum="1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_email"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@color/colorinput"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/inputbackground"
        android:textColor="@color/colorinput"
        android:id="@+id/new_email"
        android:hint="@string/new_email"
        android:layout_weight="0.15"
        android:layout_height="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@color/colorinput"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/inputbackground"
        android:textColor="@color/colorinput"
        android:id="@+id/confirm_new_email"
        android:hint="@string/confirm_new_email"
        android:layout_weight="0.16" />

    <Button
        android:text="@string/email_update_button"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:id="@+id/update_email_button"
        android:layout_height="75dp" />

</LinearLayout>
